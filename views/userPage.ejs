<% include header.ejs %>
<div class="container">
<h1 style="margin-top: 5%">Your Saved Legislators:</h1>
<div class="row">
<% for(var j = 0; j < legislators.length; j++){ if(legislators[j].party == "R") { %>
        <div class="col s12 m6">
          <div class="card red darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= legislators[j].first_name %> <%= legislators[j].last_name %></span>
              <p>Republican</p>
            </div>
            <div class="white-text card-action">
              Twitter: <a href="http://twitter.com/<%= legislators[j].twitter %>">@<%= legislators[j].twitter %></a>
            </div>
            <div class="card-action">
            <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" class="billbutton red waves-effect waves-light btn">Related Bills</a>
            <a id="<%= legislators[j].id %>" first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" twitter ="<%= legislators[j].twitter %>" party = "<%= legislators[j].party %>" class="deletebutton red waves-effect waves-light btn">Delete Legislator</a>
            </div>
          </div>
        </div>
        <% } else if(legislators[j].party == "D") { %>
        <div class="col s12 m6">
          <div class="card blue darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= legislators[j].first_name %> <%= legislators[j].last_name %></span>
              <p>Democrat</p>
            </div>
            <div class="white-text card-action">
              Twitter: <a href="http://twitter.com/<%= legislators[j].twitter %>">@<%= legislators[j].twitter %></a>
            </div>
            <div class="card-action">
              <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" class="billbutton blue waves-effect waves-light btn">Related Bills</a>
              <a id="<%= legislators[j].id %>" first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" twitter ="<%= legislators[j].twitter %>" party = "<%= legislators[j].party %>" class="deletebutton blue waves-effect waves-light btn">Delete Legislator</a>
            </div>
          </div>
        </div>
        <% } else { %>
        <div class="col s12 m6">
          <div class="card green darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= legislators[j].first_name %> <%= legislators[j].last_name %></span>
              <p>Independent</p>
            </div>
            <div class="white-text card-action">
              Twitter: <a href="http://twitter.com/<%= legislators[j].twitter %>">@<%= legislators[j].twitter %></a>
            </div>
            <div class="card-action">
            <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" class="billbutton green waves-effect waves-light btn">Related Bills</a>
            <a id="<%= legislators[j].id %>" first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" twitter ="<%= legislators[j].twitter %>" party = "<%= legislators[j].party %>" class="deletebutton green waves-effect waves-light btn">Delete Legislator</a>
            </div>
          </div>
        </div>
        <% } } %>
</div>
<h1 style="margin-top: 5%">Your Saved Bills:</h1>
  <div class="col">
      <% for(var j = 0; j < bills.length; j++) {  %>
        <div class="col s12 m6">
          <div class="card white darken-1">
            <div class="card-content black-text">
              <% if (bills[j].shortname == null) { %>
              <span class="card-title"><%= bills[j].name %></span>
              <% } else { %>
              <span class="card-title"><%= bills[j].shortname %></span>
              <% } %>
              <p>Sponsored by <%= bills[j].sponsor_first_name %> <%= bills[j].sponsor_last_name %></p>
              <p>Passed on <%= bills[j].date %></p>
            </div>
            <div class="card-action">
            <a id="<%= bills[j].id %>" name='<%=bills[j].name%>' shortname='<%=bills[j].shortname%>' date ='<%=bills[j].date%>' sponsor-first-name="<%=bills[j].sponsor_first_name%>" sponsor-last-name="<%=bills[j].sponsor_last_name%>" class="billdeletebutton white black-text waves-effect waves-light btn">Delete Bill</a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
</div>
</div>
