<% include header.ejs %>
<div class="container">
<h1 style="margin-top: 5%">The legislators in zipcode <b><%= zipcode %></b>:</h1>
<div class="row">
<% for(var j = 0; j < legislators.length; j++){ if(legislators[j].party == "R") { %>
        <div class="col s12 m6">
          <div class="card red darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= legislators[j].first_name %> <%= legislators[j].last_name %></span>
              <p>Republican</p>
            </div>
            <div class="white-text card-action">
              Twitter: <a href="http://twitter.com/<%= legislators[j].twitter %>">@<%= legislators[j].twitter %></a>
            </div>
            <div class="card-action">
            <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" class="billbutton red waves-effect waves-light btn">Related Bills</a>
            <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" twitter ="<%= legislators[j].twitter %>" party = "<%= legislators[j].party %>" class="savebutton red waves-effect waves-light btn">Save Legislator</a>
            </div>
          </div>
        </div>
        <% } else if(legislators[j].party == "D") { %>
        <div class="col s12 m6">
          <div class="card blue darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= legislators[j].first_name %> <%= legislators[j].last_name %></span>
              <p>Democrat</p>
            </div>
            <div class="white-text card-action">
              Twitter: <a href="http://twitter.com/<%= legislators[j].twitter %>">@<%= legislators[j].twitter %></a>
            </div>
            <div class="card-action">
              <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" class="billbutton blue waves-effect waves-light btn">Related Bills</a>
              <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" twitter ="<%= legislators[j].twitter %>" party = "<%= legislators[j].party %>" class="savebutton blue waves-effect waves-light btn">Save Legislator</a>
            </div>
          </div>
        </div>
        <% } else { %>
        <div class="col s12 m6">
          <div class="card green darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= legislators[j].first_name %> <%= legislators[j].last_name %></span>
              <p>Independent</p>
            </div>
            <div class="white-text card-action">
              Twitter: <a href="http://twitter.com/<%= legislators[j].twitter %>">@<%= legislators[j].twitter %></a>
            </div>
            <div class="card-action">
            <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" class="billbutton green waves-effect waves-light btn">Related Bills</a>
            <a first-name="<%= legislators[j].first_name %>" last-name="<%= legislators[j].last_name %>" twitter ="<%= legislators[j].twitter %>" party = "<%= legislators[j].party %>" class="savebutton green waves-effect waves-light btn">Save Legislator</a>
            </div>
          </div>
        </div>
        <% } } %>
</div>
</div>
